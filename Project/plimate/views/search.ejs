<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tracks</title>

    <style>
        .tracks-container {
            display: flex;
            flex-wrap: wrap;
        }

        .tracks-item {
            margin: 55px;
            width: 200px;
            text-align: center;
        }

        .track-link {
            display: block;
            text-decoration: none;
            color: #333;
        }

        .track-image {
            width: 100%;
            height: auto;
        }

        .track-name {
            margin-top: 10px;
            font-weight: bold;
        }

        .artist-name {
            margin-top: 5px;
        }
    </style>
</head>

<body>
    <h1>Tracks</h1>
    <div><a href="/searchsong/<%= playlistId %>">Search Song</a></div>
    <% if(roomId){ %>
      <div><a href="/chat/<%= roomId %>/<%= playlistId %>">채팅방 돌아가기</a></div>
    <% }else{ %>
      <div><a href="/playlist/<%= playlistId %>">플레이리스트 돌아가기</a></div>
    <% } %>
    <div class="tracks-container">
        <% tracks.forEach(function(track, index) { %>
        <div class="tracks-item">
            <a href="/searching/<%= track.id %>" class="track-link">
                <img src="<%= track.album.images[0].url %>" alt="track Image" class="track-image">
                <div class="track-name"><%= track.name %></div>
                <div class="artist-name"><%= track.artists[0].name %></div>
                <audio controls>
                    <source src="<%= track.preview_url %>" type="audio/mpeg">
                    Your browser does not support the audio element.
                </audio>
            </a>
            <button onclick="addTrack('<%= track.uri %>')">Add</button>
        </div>
        <% }); %>
    <div>
        <ul>
            <!-- <li><a href="/plimatelist">playlist</a></li> -->
        </ul>
    </div>
    <script>
      function addTrack(trackUri) {
        // AJAX 요청을 보냅니다.
	  fetch('/addtrack/<%= playlistId %>', {
          method: 'POST',
          headers: {
          'Content-Type': 'application/json',
          },
          body: JSON.stringify({ trackUri: trackUri }),
        })
          .then(response => {
            if (response.ok) {
              alert('Track added to playlist!');
            } else {
              alert('Failed to add track to playlist');
            }
          })
          .catch(error => {
            console.error('Error:', error);
            alert('Failed to add track to playlist');
          });
        }
    </script>
</body>
</html>
